{
  "compilerOptions": {
    "target": "ES2021",
    "module": "commonjs",
    "rootDir": "src",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["jest", "node"],
    "baseUrl": "./src",
    "paths": {
      "@repositories/*": ["repositories/*"],
      "@services/*": ["services/*"],
      "@validation/*": ["validation/*"],
      "@controllers/*": ["controllers/*"],
    }
  },
  "include": ["src", "tests"]
}